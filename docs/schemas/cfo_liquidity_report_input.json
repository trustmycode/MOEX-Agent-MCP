{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CfoLiquidityReportInput",
  "description": "Input schema for risk-analytics-mcp.build_cfo_liquidity_report tool. CFO-ориентированный отчёт по ликвидности и устойчивости портфеля.",
  "type": "object",
  "properties": {
    "positions": {
      "type": "array",
      "minItems": 1,
      "description": "Позиции портфеля с весами и характеристиками ликвидности.",
      "items": {
        "type": "object",
        "properties": {
          "ticker": {
            "type": "string",
            "minLength": 1,
            "maxLength": 32,
            "description": "Ticker, e.g. SBER."
          },
          "weight": {
            "type": "number",
            "exclusiveMinimum": 0,
            "maximum": 1,
            "description": "Вес инструмента в портфеле (0..1)."
          },
          "asset_class": {
            "type": "string",
            "enum": ["equity", "fixed_income", "cash", "fx", "credit"],
            "default": "equity",
            "description": "Класс актива."
          },
          "liquidity_bucket": {
            "type": "string",
            "enum": ["0-7d", "8-30d", "31-90d", "90d+"],
            "default": "0-7d",
            "description": "Корзина ликвидности — срок реализации актива."
          },
          "board": {
            "type": ["string", "null"],
            "minLength": 1,
            "maxLength": 16,
            "description": "MOEX board (optional)."
          },
          "currency": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3,
            "default": "RUB",
            "description": "Валюта позиции (ISO 4217)."
          }
        },
        "required": ["ticker", "weight"],
        "additionalProperties": false
      }
    },
    "total_portfolio_value": {
      "type": ["number", "null"],
      "exclusiveMinimum": 0,
      "description": "Общая стоимость портфеля (опционально)."
    },
    "base_currency": {
      "type": "string",
      "minLength": 3,
      "maxLength": 3,
      "default": "RUB",
      "description": "Базовая валюта отчёта."
    },
    "from_date": {
      "type": "string",
      "format": "date",
      "description": "Начальная дата периода анализа (YYYY-MM-DD)."
    },
    "to_date": {
      "type": "string",
      "format": "date",
      "description": "Конечная дата периода анализа (YYYY-MM-DD)."
    },
    "horizon_months": {
      "type": "integer",
      "minimum": 1,
      "maximum": 36,
      "default": 12,
      "description": "Горизонт прогнозирования ликвидности (месяцы)."
    },
    "stress_scenarios": {
      "type": ["array", "null"],
      "items": {
        "type": "string"
      },
      "default": ["base_case", "equity_-10_fx_+20", "rates_+300bp"],
      "description": "Список идентификаторов стресс-сценариев. По умолчанию: base_case, equity_-10_fx_+20, rates_+300bp."
    },
    "aggregates": {
      "type": ["object", "null"],
      "description": "Агрегированные характеристики портфеля для стресс-сценариев.",
      "properties": {
        "base_currency": {
          "type": "string"
        },
        "asset_class_weights": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        },
        "fx_exposure_weights": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        },
        "fixed_income_duration_years": {
          "type": ["number", "null"]
        },
        "credit_spread_duration_years": {
          "type": ["number", "null"]
        }
      }
    },
    "covenant_limits": {
      "type": ["object", "null"],
      "description": "Опциональные лимиты ковенант для проверки.",
      "properties": {
        "max_net_debt_ebitda": {
          "type": ["number", "null"],
          "description": "Максимальный NetDebt/EBITDA."
        },
        "min_liquidity_ratio": {
          "type": ["number", "null"],
          "description": "Минимальный коэффициент ликвидности (0-30d / 0-7d liabilities)."
        },
        "min_current_ratio": {
          "type": ["number", "null"],
          "description": "Минимальный коэффициент текущей ликвидности."
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["positions", "from_date", "to_date"],
  "additionalProperties": false
}
