{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "description": "Output schema for risk-analytics-mcp.suggest_rebalance tool.",
  "properties": {
    "error": {
      "additionalProperties": true,
      "description": "Error details if rebalancing failed.",
      "properties": {
        "details": {
          "additionalProperties": true,
          "type": [
            "object",
            "null"
          ]
        },
        "error_type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      },
      "required": [
        "error_type",
        "message"
      ],
      "type": [
        "object",
        "null"
      ]
    },
    "metadata": {
      "additionalProperties": true,
      "description": "Request metadata and calculation details.",
      "properties": {
        "as_of": {
          "format": "date-time",
          "type": "string"
        },
        "input_positions_count": {
          "minimum": 0,
          "type": "integer"
        },
        "risk_profile": {
          "properties": {
            "max_issuer_weight": {
              "type": "number"
            },
            "max_single_position_weight": {
              "type": "number"
            },
            "max_turnover": {
              "type": "number"
            }
          },
          "type": "object"
        },
        "total_portfolio_value": {
          "type": [
            "number",
            "null"
          ]
        }
      },
      "type": "object"
    },
    "summary": {
      "additionalProperties": false,
      "description": "Rebalancing summary.",
      "properties": {
        "asset_class_issues_resolved": {
          "description": "Number of asset class issues resolved.",
          "minimum": 0,
          "type": "integer"
        },
        "concentration_issues_resolved": {
          "description": "Number of concentration issues resolved.",
          "minimum": 0,
          "type": "integer"
        },
        "positions_changed": {
          "description": "Number of positions with changes.",
          "minimum": 0,
          "type": "integer"
        },
        "total_turnover": {
          "description": "Total turnover (sum of |delta| / 2).",
          "maximum": 1,
          "minimum": 0,
          "type": "number"
        },
        "turnover_within_limit": {
          "description": "Whether turnover is within max_turnover limit.",
          "type": "boolean"
        },
        "warnings": {
          "description": "Warnings during rebalancing.",
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": [
        "object",
        "null"
      ]
    },
    "target_weights": {
      "additionalProperties": {
        "maximum": 1,
        "minimum": 0,
        "type": "number"
      },
      "description": "Target weights by ticker after rebalancing.",
      "type": "object"
    },
    "trades": {
      "description": "Proposed trades for rebalancing.",
      "items": {
        "additionalProperties": false,
        "properties": {
          "estimated_value": {
            "description": "Estimated trade value (if total_portfolio_value provided).",
            "type": [
              "number",
              "null"
            ]
          },
          "reason": {
            "description": "Reason for trade (concentration, asset_class, etc.).",
            "type": "string"
          },
          "side": {
            "description": "Trade direction.",
            "enum": [
              "buy",
              "sell"
            ],
            "type": "string"
          },
          "target_weight": {
            "description": "Target weight after rebalancing.",
            "maximum": 1,
            "minimum": 0,
            "type": "number"
          },
          "ticker": {
            "description": "Ticker for the trade.",
            "maxLength": 32,
            "minLength": 1,
            "type": "string"
          },
          "weight_delta": {
            "description": "Weight change (positive for buy, negative for sell).",
            "type": "number"
          }
        },
        "required": [
          "ticker",
          "side",
          "weight_delta",
          "target_weight"
        ],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": [
    "metadata",
    "target_weights",
    "trades"
  ],
  "title": "SuggestRebalanceOutput",
  "type": "object"
}